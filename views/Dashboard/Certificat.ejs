<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dr. Hanaa Draa Clinic: Providing Quality Healthcare Services</title>
<!-- Font Awesome -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  rel="stylesheet"
/>
<!-- Google Fonts -->
<link
  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
  rel="stylesheet"
/>
 
 

<style>
.card-body {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.external-event {
  display: flex;
  flex-direction: row;
  align-items: center;
}
</style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <!-- <div class="preloader flex-column justify-content-center align-items-center">
    <img class="animation__shake" src="dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
  </div> -->
 <%- include('./components/navbar') %>

 <%- include('./components/sidebar') %>





  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Certificats</h1>
          </div>
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>


        <!-- Modal Edit Doctor -->
        <div class="modal top fade" id="AddCert" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-mdb-backdrop="static" data-mdb-keyboard="false">
            <!-- Modal content -->
            <div class="modal-dialog ">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Add Certificat</h5>
                  <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <form  id="AddCertificate"  >
                    <div class="row">
                        <div class="col-md-6 mb-3">
                          <label for="input-name" class="col-form-label">Deplome:</label>
                          <input type="text" name="Deplome" class="form-control" id="input-name" required />
                        </div>
                        <div class="col-md-6 mb-3">
                          <label for="input-prenom" class="col-form-label">Source:</label>
                          <input type="text" name="source" class="form-control" id="input-prenom" required />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6 mb-3">
                          <label for="input-tele" class="col-form-label">Date Certficate:</label>
                          <input type="date" name="dateCer" class="form-control" id="input-tele" required />
                        </div>
                      </div>      
                 </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                    Close
                  </button>
                  <button type="submit" class="btn btn-primary">add Certficate</button>
                </div>
              </form>
              </div>
            </div>
          </div>
          <!-- End Modal Edit Doctor -->

              <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="d-flex justify-content-end mb-3"> 
            <button
            type="button"
            class="btn btn-primary"
            data-mdb-toggle="modal"
            data-mdb-target="#AddCert"
            data-mdb-whatever="@mdo"
            >
            <i class="fa fa-plus"></i> Certficate
        </button>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Certificats</h3>
              </div>
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped ">
                  <thead>
                    <tr>
                      <th>Deploma</th>
                      <th>Source</th>
                      <th>Date Deplome</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- Loop through doctors data and generate rows -->
                    <% Certificats.forEach(Certficate => {%> 
                     <tr id="<%= Certficate.id %>">
                       <td><%- Certficate.NameCertificate %></td>
                       <td><%- Certficate.SourceCertificate %></td>
                       <td><%- Certficate.DateCertificate %></td>
                        <td class="text-center">
                         <span class="btn btn-sm btn-danger btn-floating" onclick="removeCertficate('<%= Certficate.id %>')"><i class="fas fa-trash-alt"></i></span>
                      </td>
                    </tr>
                    <%  }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('./components/footer') %>

</div>
<!-- ./wrapper -->


 
</body>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
 
  <!-- Page specific script -->
 <script src="js/certificate.js"></script>
</html>